<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastraProdutoActivity">

    <ImageView
        android:id="@+id/imgView"
        android:layout_margin="20dp"
        android:onClick="botaoClicado"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <EditText
        android:id="@+id/edt_nome_produto"
        android:hint="Produto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edt_peso_produto"
        android:hint="Peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spn_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>

    <Button
        android:id="@+id/btnSalvaProduto"
        android:text="Salvar Produto"
        android:onClick="botaoClicado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>